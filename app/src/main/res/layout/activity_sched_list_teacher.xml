                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studNextStartTime" android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                tools:text="LBB 466TC"
                app:layout_constraintStart_toEndOf="@+id/studNextEndTime" android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/studNextBuilding"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studNextEndTime" android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                tools:text="LBB 466TC"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/studNextBuilding"
                app:layout_constraintStart_toEndOf="@+id/upNextScheduleText" android:layout_marginStart="52dp"
                android:layout_marginLeft="52dp"/>
        <TextView
                android:text="Schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upNextScheduleText" android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/upNextBuildingText" android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>
        <TextView
                android:text="Room"
