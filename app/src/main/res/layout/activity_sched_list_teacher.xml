        <TextView
                android:text="Stephanie Polinar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studNextTeacher" android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toEndOf="@+id/upNextTeacherText" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/studNextCourseCode"
                app:layout_constraintHorizontal_bias="0.365"
                android:textColor="@android:color/background_dark"/>
        <TextView
                android:text="IT 5005"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studNextCourseCode" android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/upNextCourseCodeText" android:layout_marginLeft="16dp"
