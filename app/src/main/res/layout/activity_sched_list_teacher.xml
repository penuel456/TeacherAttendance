<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SchedListTeacher">

    <Button
            android:layout_width="182dp"
            android:layout_height="49dp" android:id="@+id/refresh2"
            tools:text="Refresh"
            android:onClick="refreshSchedule" android:background="@color/colorPrimary"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp" android:text="@string/refresh"/>
    <Button
            android:layout_width="165dp"
            android:layout_height="52dp"
            android:id="@+id/editBtn"
            android:onClick="editSched"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintStart_toEndOf="@+id/refresh2"
            android:layout_marginStart="20dp" android:layout_marginLeft="20dp" tools:text="Edit" android:text="@string/edit"/>
    <TextView
            android:text="@string/no_schedule_for_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/noSchedNotif2"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp"
            app:layout_constraintTop_toTopOf="@+id/Schedule_teacher_layout" android:visibility="invisible"
            android:layout_marginTop="304dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="408dp"
            android:layout_height="671dp"
            android:id="@+id/Schedule_teacher_layout" android:visibility="visible"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" app:layout_constraintStart_toStartOf="parent"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teachEndTime" android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                tools:text="LBB 466TC"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/teachBuilding"
                app:layout_constraintStart_toEndOf="@+id/teachStartTime" android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teachStartTime" android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                tools:text="LBB 466TC"
                app:layout_constraintStart_toEndOf="@+id/scheduleText" android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/teachBuilding"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studNextStartTime" android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                tools:text="LBB 466TC"
                app:layout_constraintStart_toEndOf="@+id/studNextEndTime" android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/studNextBuilding"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studNextEndTime" android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                tools:text="LBB 466TC"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/studNextBuilding"
                app:layout_constraintStart_toEndOf="@+id/upNextScheduleText" android:layout_marginStart="68dp"
                android:layout_marginLeft="68dp"/>
        <TextView
                android:text="@string/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upNextScheduleText" android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/upNextBuildingText" android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>
        <TextView
                android:text="@string/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upNextBuildingText" android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:textStyle="bold" android:textColor="@android:color/background_dark"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/upNextCourseCodeText"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studNextBuilding" android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                app:layout_constraintStart_toEndOf="@+id/upNextBuildingText"
                android:layout_marginStart="100dp" android:layout_marginLeft="100dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/studNextCourseCode" tools:text="LBB 485TC"/>
        <TextView
                android:text="@string/course_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upNextCourseCodeText" android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/upNextText" android:layout_marginTop="24dp"
                android:textStyle="bold" android:textColor="@android:color/background_dark"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studNextCourseCode" android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/upNextCourseCodeText" android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:textColor="@android:color/background_dark"

                android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/Submit" tools:text="IT 5005"/>
        <TextView
                android:text="@string/ongoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onGoingText" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.029" android:layout_marginTop="88dp"
                app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"
                tools:textColor="@color/lightGreen"/>
        <TextView
                android:text="@string/up_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upNextText" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.028"
                android:textStyle="bold" tools:textColor="@color/lightGreen"
                android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/scheduleText2"/>
        <TextView
                android:text="@string/course_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/courseCodeText" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/onGoingText" android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teachCourseCode" android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toEndOf="@+id/courseCodeText" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.167" android:textColor="@android:color/background_dark"
                android:layout_marginTop="144dp" app:layout_constraintTop_toTopOf="parent" tools:text="IT 5001"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teachBuilding" android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/buildingText" android:layout_marginLeft="104dp"
                android:layout_marginStart="104dp"
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/teachCourseCode"
                tools:text="LBB 466TC"/>
        <TextView
                android:text="@string/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buildingText" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/courseCodeText"/>
        <TextView
                android:text="@string/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scheduleText" android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/buildingText" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"/>
        <TextView
                android:text="@string/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scheduleText2" android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/scheduleText"/>
        <Spinner
                android:layout_width="164dp"
                android:layout_height="32dp"
                android:id="@+id/status"
                android:entries="@array/status_arrays"
                android:prompt="@string/status_prompt"
                android:spinnerMode="dropdown"
                android:visibility="visible" app:layout_constraintStart_toEndOf="@+id/scheduleText2"
                android:layout_marginStart="96dp" android:layout_marginLeft="96dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/teachStartTime"/>
        <Button
                android:text="@string/submit"
                android:layout_width="107dp"
                android:layout_height="43dp"
                android:id="@+id/Submit"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@+id/reason" android:background="#0ba156"
                android:textColor="@android:color/background_light" android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.568" android:onClick="submitStatus"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="393dp"
                android:layout_height="66dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:id="@+id/reason"
                android:visibility="gone"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/status">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/state_your_reason" tools:textSize="24sp"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/appBarLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/include" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
        />

    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/appBarLayout"/>

</android.support.constraint.ConstraintLayout>