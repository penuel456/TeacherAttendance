                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teachStartTime" android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                tools:text="LBB 466TC"
                app:layout_constraintStart_toEndOf="@+id/scheduleText" android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp" android:layout_marginTop="16dp"
