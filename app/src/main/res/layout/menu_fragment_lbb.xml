<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/darker_gray"
                                             android:id="@+id/frameLayout3">
    <RadioGroup
            android:layout_width="113dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.109" android:id="@+id/lbb_floors">
        <RadioButton
                android:text="1st Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/firstFloorBtn" android:layout_weight="1"
                tools:text="1st Floor" android:baselineAligned="false" />
        <RadioButton
                android:text="2nd Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/secondFloorBtn" android:layout_weight="1"
                tools:text="2nd Floor" android:baselineAligned="false"/>
        <RadioButton
                android:text="3rd Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/thirdFloorBtn" android:layout_weight="1"
                tools:text="3rd Floor" android:baselineAligned="false"/>
        <RadioButton
                android:text="4th Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fourthFloorBtn" android:layout_weight="1"
                tools:text="4th Floor" android:baselineAligned="false"/>
    </RadioGroup>
    <TextView
            android:text="Choose a Floor"
            android:layout_width="113dp"
            android:layout_height="30dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.109"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Choose a Wing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginLeft="104dp" android:layout_marginStart="104dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <RadioGroup
            android:layout_width="122dp"
            android:layout_height="168dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toEndOf="@+id/lbb_floors"
            android:layout_marginLeft="84dp" android:layout_marginStart="84dp" android:id="@+id/lbb_wings"
            android:visibility="invisible">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbb_hiddenwing" android:layout_weight="1"
                android:visibility="gone"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="174dp" android:id="@+id/lbb_wing1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbb_wing2" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbb_wing3" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbb_wing4" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="116dp"
                tools:layout_editor_absoluteX="358dp" android:id="@+id/lbb_wing5" android:visibility="visible"/>
    </RadioGroup>

    <ScrollView
            android:layout_width="320dp"
            android:layout_height="239dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="180dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.4"
            android:id="@+id/lbbScrollView" android:scrollbarStyle="outsideInset" android:visibility="gone"
            android:background="@android:color/darker_gray">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:orientation="vertical">
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="58dp" tools:layout_editor_absoluteY="304dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/lbbRoomOne"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="60dp" tools:layout_editor_absoluteY="391dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/lbbRoomTwo"/>
            <Button
                    android:text="Button"
                    android:layout_width="166dp"
                    android:layout_height="60dp" tools:layout_editor_absoluteY="439dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/lbbRoomThree"/>
            <Button
                    android:text="Button"
                    android:layout_width="167dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="509dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/lbbRoomFour"/>
            <Button
                    android:text="Button"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content" android:id="@+id/lbbRoomFive"/>

        </LinearLayout>
    </ScrollView>




</android.support.constraint.ConstraintLayout>