<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/background_light"
                                             android:id="@+id/frameLayout3">
    <RadioGroup
            android:layout_width="120dp"
            android:layout_height="164dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.116" android:id="@+id/lbb_floors"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2">
        <RadioButton
                android:text="1st Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/firstFloorBtn" android:layout_weight="1"
                tools:text="1st Floor" android:baselineAligned="false"
                android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="2nd Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/secondFloorBtn" android:layout_weight="1"
                tools:text="2nd Floor" android:baselineAligned="false"
                android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="3rd Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/thirdFloorBtn" android:layout_weight="1"
                tools:text="3rd Floor" android:baselineAligned="false"
                android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="4th Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fourthFloorBtn" android:layout_weight="1"
                tools:text="4th Floor" android:baselineAligned="false"
                android:buttonTint="#0ba156"/>
    </RadioGroup>
    <TextView
            android:text="Choose a Floor"
            android:layout_width="191dp"
            android:layout_height="30dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.039"
            android:layout_marginTop="216dp" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@android:color/background_dark"/>
    <TextView
            android:text="Choose a Wing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseAWing" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp" android:layout_marginTop="212dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@android:color/background_dark" android:visibility="gone"/>
    <RadioGroup
            android:layout_width="122dp"
            android:layout_height="168dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chooseAWing" app:layout_constraintStart_toEndOf="@+id/lbb_floors"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:id="@+id/lbb_wings"
            android:visibility="invisible">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbb_hiddenwing" android:layout_weight="1"
                android:visibility="gone" android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="174dp" android:id="@+id/lbb_wing1" android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbb_wing2" android:layout_weight="1"
                android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbb_wing3" android:layout_weight="1"
                android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbb_wing4" android:layout_weight="1"
                android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="116dp"
                tools:layout_editor_absoluteX="358dp" android:id="@+id/lbb_wing5" android:visibility="visible"
                android:buttonTint="#0ba156"/>
    </RadioGroup>

    <ScrollView
            android:layout_width="348dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/lbbScrollView" android:scrollbarStyle="outsideInset" android:visibility="gone"
            android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.17" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/lbb_floors">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:orientation="vertical">
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="60dp" tools:layout_editor_absoluteY="391dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/lbbRoomOne"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:layout_marginTop="100dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="58dp" tools:layout_editor_absoluteY="304dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/lbbRoomTwo"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn"
                    android:layout_marginBottom="12dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="166dp"
                    android:layout_height="60dp" tools:layout_editor_absoluteY="439dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/lbbRoomThree"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="167dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="509dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/lbbRoomFour"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content" android:id="@+id/lbbRoomFive"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </ScrollView>
    <ImageView
            android:layout_width="419dp"
            android:layout_height="192dp" app:srcCompat="@drawable/lbb"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/chooseAWing" app:layout_constraintVertical_bias="0.0"/>


</android.support.constraint.ConstraintLayout>