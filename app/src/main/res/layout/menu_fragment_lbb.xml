<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/background_light"
                                             android:id="@+id/frameLayout3">
    <RadioGroup
            android:layout_width="113dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.156" android:id="@+id/lbb_floors"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2">
        <RadioButton
                android:text="1st Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/firstFloorBtn" android:layout_weight="1"
                tools:text="1st Floor" android:baselineAligned="false" android:buttonTint="#0ba156"
                android:checked="true"
        />
        <RadioButton
                android:text="2nd Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/secondFloorBtn" android:layout_weight="1"
                tools:text="2nd Floor" android:baselineAligned="false" android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="3rd Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/thirdFloorBtn" android:layout_weight="1"
                tools:text="3rd Floor" android:baselineAligned="false" android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="4th Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fourthFloorBtn" android:layout_weight="1"
                tools:text="4th Floor" android:baselineAligned="false" android:buttonTint="#0ba156"/>
    </RadioGroup>
    <TextView
            android:text="Choose a Floor"
            android:layout_width="262dp"
            android:layout_height="32dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.33"
            android:textSize="24sp" android:textStyle="normal|bold" android:textColor="@android:color/background_dark"/>
    <Button
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbb_confirm" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lbb_floors"/>


</android.support.constraint.ConstraintLayout>