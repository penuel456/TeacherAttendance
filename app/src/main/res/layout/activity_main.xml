<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="399dp"
            android:layout_height="408dp" app:srcCompat="@drawable/schoolbg" android:id="@+id/imageView7"
            android:layout_marginBottom="324dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:contentDescription="school"/>
    <ImageView
            android:layout_width="419dp"
            android:layout_height="411dp" app:srcCompat="@drawable/green_bg_2" android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.28" android:contentDescription="green"/>
    <EditText
            android:layout_width="258dp"
            android:layout_height="68dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/username" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="368dp"
            app:layout_constraintTop_toTopOf="parent" android:importantForAutofill="no" android:hint="ID Number"
            tools:targetApi="o" app:layout_constraintHorizontal_bias="0.54"
            tools:textColor="@android:color/background_light"/>
    <EditText
            android:layout_height="72dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_width="258dp" android:hint="@string/password" android:autofillHints="" tools:targetApi="o"
            app:layout_constraintHorizontal_bias="0.54" tools:textColor="@android:color/background_light"/>
    <Button
            android:text="@string/login"
            android:layout_width="177dp"
            android:layout_height="51dp"
            android:id="@+id/loginBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password"
            style="@style/Widget.AppCompat.Button.Small" android:textSize="18sp"
            android:background="#0ba156"
            android:textColor="@android:color/white" android:onClick="check"/>

    <ImageView
            android:layout_width="248dp"
            android:layout_height="219dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/username"
            android:contentDescription="usclogo"/>

</android.support.constraint.ConstraintLayout>