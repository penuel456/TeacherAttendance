<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/background_light">
    <ScrollView
            android:layout_width="348dp"
            android:layout_height="119dp"
            android:id="@+id/safadScrollView" android:scrollbarStyle="outsideInset" android:visibility="gone"
            android:background="@android:color/transparent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.617"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/safad_floors"
            app:layout_constraintVertical_bias="0.111">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:orientation="vertical">
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="58dp" tools:layout_editor_absoluteY="304dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/safadRoomOne"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn"
                    android:layout_marginBottom="12dp" android:layout_marginTop="220dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="60dp" tools:layout_editor_absoluteY="391dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/safadRoomTwo"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
            />
            <Button
                    android:text="Button"
                    android:layout_width="166dp"
                    android:layout_height="60dp" tools:layout_editor_absoluteY="439dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/safadRoomThree"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="167dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="509dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/safadRoomFour"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content" android:id="@+id/safadRoomFive"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/rounded_green_btn"/>

        </LinearLayout>
    </ScrollView>
    <TextView
            android:text="Choose a Wing"
            android:layout_width="167dp"
            android:layout_height="27dp" android:id="@+id/chooseAWing"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"
            android:layout_marginTop="216dp"
            android:textColor="@android:color/background_dark"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0" tools:textSize="24sp" android:textStyle="bold"
            android:textSize="24sp" android:visibility="gone"/>
    <RadioGroup
            android:layout_width="119dp"
            android:layout_height="168dp"
            android:id="@+id/safad_wings"
            app:layout_constraintHorizontal_bias="0.716" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/safad_floors"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chooseAWing" android:visibility="gone">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/safad_hiddenwing" android:layout_weight="1"
                android:visibility="gone" android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="51dp" tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="174dp" android:id="@+id/safad_wing1" android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/safad_wing2" android:layout_weight="1"
                android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="19dp" android:id="@+id/safad_wing3" android:layout_weight="1"
                android:buttonTint="#0ba156"/>
    </RadioGroup>
    <RadioGroup
            android:layout_width="113dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.102" android:id="@+id/safad_floors"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3">
        <RadioButton
                android:text="1st Floor"
                android:layout_width="wrap_content"
                android:layout_height="45dp" android:id="@+id/firstFloorBtn" android:layout_weight="1"
                android:buttonTint="#0ba156"
        />
        <RadioButton
                android:text="2nd Floor"
                android:layout_width="wrap_content"
                android:layout_height="46dp" android:id="@+id/secondFloorBtn" android:layout_weight="1"
                android:buttonTint="#0ba156"
        />
        <RadioButton
                android:text="3rd Floor"
                android:layout_width="wrap_content"
                android:layout_height="46dp" android:id="@+id/thirdFloorBtn" android:layout_weight="1"
                android:buttonTint="#0ba156"
        />
    </RadioGroup>
    <TextView
            android:text="Choose a Floor"
            android:layout_width="167dp"
            android:layout_height="27dp" android:id="@+id/textView3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="216dp"
            android:textColor="@android:color/background_dark"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.005" tools:textSize="24sp" android:textStyle="bold"
            android:textSize="24sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="207dp" app:srcCompat="@drawable/cafa"
            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>