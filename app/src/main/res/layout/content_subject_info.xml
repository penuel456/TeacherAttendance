<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_subject_info"
        tools:context=".subject_info">

    <FrameLayout
            android:layout_width="371dp"
            android:layout_height="117dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:background="@drawable/padded_green_table" android:id="@+id/frameLayout2"
    >

    </FrameLayout>
    <TextView
            android:text="Course Code"
            android:layout_width="159dp"
            android:layout_height="34dp" android:id="@+id/textView8"
            android:textStyle="bold" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp" android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="Teacher"
            android:layout_width="159dp"
            android:layout_height="34dp" android:id="@+id/textView10"
            android:textStyle="bold"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp" android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:text="IT 2201"
            android:layout_width="119dp"
            android:layout_height="34dp" android:id="@+id/course_code"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            android:textSize="18sp" android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="Stephanie Polinar"
            android:layout_width="175dp"
            android:layout_height="30dp" android:id="@+id/course_code2"
            android:textSize="18sp" android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/course_code"
            app:layout_constraintStart_toEndOf="@+id/textView10"
    />
    <FrameLayout
            android:layout_width="371dp"
            android:layout_height="117dp"
            android:background="@drawable/padded_green_table" android:id="@+id/frame"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>
    <TextView
            android:text="10"
            android:layout_width="130dp"
            android:layout_height="33dp" android:id="@+id/course_code3"
            android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="148dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/textView11"
            android:gravity="center"/>
    <TextView
            android:text="Days absent:"
            android:layout_width="159dp"
            android:layout_height="34dp" android:id="@+id/textView11"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"
            android:layout_marginBottom="148dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ScrollView
            android:layout_width="370dp"
            android:layout_height="181dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.48"
            android:id="@+id/scrollView2" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center">
            <Button
                    android:text="Button"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content" android:id="@+id/button4" android:gravity="center"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content" android:id="@+id/button"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content" android:id="@+id/button2"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content" android:id="@+id/button3"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>