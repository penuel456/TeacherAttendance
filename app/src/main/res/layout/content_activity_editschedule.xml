<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_editschedule"
        tools:context=".activity_editschedule">

    <TextView
            android:text="Building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            tools:textColor="@android:color/background_dark" android:textStyle="bold"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Room"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:textSize="18sp"
            tools:textColor="@android:color/background_dark" android:textStyle="bold"/>
    <TextView
            android:text="Day"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textSize="18sp"
            tools:textColor="@android:color/background_dark" android:textStyle="bold"
            android:layout_marginTop="116dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginLeft="24dp"/>
    <EditText
            android:layout_width="209dp"
            android:layout_height="37dp"
            android:inputType="textPersonName"
            android:text="Input the room..."
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/spinner6"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"/>
    <Spinner
            android:layout_width="258dp"
            android:layout_height="30dp"
            android:id="@+id/spinner6"
            android:entries="@array/Building_arrays"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <CheckBox
            android:text="Monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"/>
    <CheckBox
            android:text="Tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/button6"
            android:layout_marginLeft="20dp"/>
    <CheckBox
            android:text="Wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            app:layout_constraintStart_toEndOf="@+id/checkBox2"
            android:layout_marginStart="23dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" android:layout_marginLeft="23dp"/>
    <CheckBox
            android:text="Thursday"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/checkBox4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"/>
    <CheckBox
            android:text="Friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2"
            app:layout_constraintStart_toEndOf="@+id/checkBox4"
            android:layout_marginStart="13dp" android:layout_marginLeft="13dp"/>
    <CheckBox
            android:text="Saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox6"
            app:layout_constraintTop_toBottomOf="@+id/checkBox3"
            app:layout_constraintStart_toEndOf="@+id/checkBox5"
            android:layout_marginStart="37dp" android:layout_marginLeft="37dp" android:layout_marginTop="8dp"/>
    <Button
            android:text="Submit"
            android:layout_width="120dp"
            android:layout_height="41dp"
            android:id="@+id/submit_Button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="140dp" android:layout_marginStart="140dp"
            android:background="#0ba156"
            android:textColor="@android:color/background_light" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox5"/>
    <Button
            android:text="Set Start Time"
            android:onClick="clickTimePicker"
            android:layout_width="125dp"
            android:layout_height="36dp"
            android:id="@+id/button5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp"
            android:background="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:textColor="@android:color/background_light" android:layout_marginRight="140dp"/>
    <Button
            android:text="Set End Time"
            android:onClick="clickTimePicker_end"
            android:layout_width="125dp"
            android:layout_height="36dp"
            android:id="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp"
            android:background="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/button5"
            android:textColor="@android:color/background_light" android:layout_marginRight="140dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_time" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_time" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            app:layout_constraintTop_toBottomOf="@+id/start_time" android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Pick a date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_picker" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/submit_Button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="140dp" android:layout_marginStart="140dp" android:onClick="clickDatePicker"/>
    <TextView
            android:text="TextView"
            android:layout_width="99dp"
            android:layout_height="23dp"
            android:id="@+id/date" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/date_picker" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="140dp" android:layout_marginStart="140dp"/>

</android.support.constraint.ConstraintLayout>