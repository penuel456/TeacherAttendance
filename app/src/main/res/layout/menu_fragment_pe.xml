<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/background_light"
                                             android:id="@+id/relativeLayout">

    <ScrollView
            android:layout_width="400dp"
            android:layout_height="285dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.373"
            android:id="@+id/peScrollView" android:scrollbarStyle="outsideInset" android:visibility="gone"
            android:background="@android:color/background_light" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pe_floors" app:layout_constraintVertical_bias="0.097">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:orientation="vertical" android:layout_marginBottom="12dp" android:visibility="visible">
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="304dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/peRoomOne"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="391dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/peRoomTwo"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="439dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/peRoomThree"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="509dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/peRoomFour"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" android:id="@+id/peRoomFive"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="60dp" android:id="@+id/peRoomSix"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>
    </ScrollView>
    <RadioGroup
            android:orientation="horizontal"
            android:layout_width="392dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:id="@+id/pe_floors"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView2">
        <RadioButton
                android:text="1st Floor"
                android:layout_width="wrap_content"
                android:layout_height="45dp" android:id="@+id/PEfirstFloorBtn" android:layout_weight="1"
                tools:text="1st Floor" android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="2nd Floor"
                android:layout_width="wrap_content"
                android:layout_height="43dp" android:id="@+id/PEsecondFloorBtn" android:layout_weight="1"
                tools:text="2nd Floor" android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="3rd Floor"
                android:layout_width="wrap_content"
                android:layout_height="46dp" android:id="@+id/PEthirdFloorBtn" android:layout_weight="1"
                tools:text="3rd Floor" android:buttonTint="#0ba156"/>
        <RadioButton
                android:text="4th Floor"
                android:layout_width="wrap_content"
                android:layout_height="48dp" android:id="@+id/PEfourthFloorBtn" android:layout_weight="1"
                tools:text="4th Floor" android:buttonTint="#0ba156"/>
    </RadioGroup>
    <TextView
            android:text="Choose a Floor"
            android:layout_width="167dp"
            android:layout_height="27dp" android:id="@+id/textView2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="596dp"
            android:textColor="@android:color/background_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.013" android:textSize="24sp" android:textStyle="bold"
            android:layout_marginTop="216dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.009"/>
    <TextView
            android:text="Choose a Wing"
            android:layout_width="167dp"
            android:layout_height="27dp" android:id="@+id/chooseAWing"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="216dp"
            android:layout_marginBottom="633dp"
            android:textColor="@android:color/background_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.822" android:textSize="24sp" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:visibility="gone"/>
    <RadioGroup
            android:layout_width="161dp"
            android:layout_height="77dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/pe_floors" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/chooseAWing"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.847" android:id="@+id/pe_wings"
            android:visibility="gone">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pe_hiddenwing" android:layout_weight="1"
                android:visibility="gone"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pe_wing1" android:layout_weight="1"
                tools:text="Main Hallway" android:visibility="visible"/>
    </RadioGroup>
    <ImageView
            android:layout_width="424dp"
            android:layout_height="215dp" app:srcCompat="@drawable/pe"
            android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
