<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".roomSchedule">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_room_schedule" android:id="@+id/include2"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_dialog_email"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/roomNumTxt"
            android:textSize="30sp" app:layout_anchorGravity="top|center" app:layout_anchor="@+id/include2"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="309dp" android:id="@+id/schedTable" android:background="@drawable/green_bg_2"
            app:layout_anchorGravity="left|center" app:layout_anchor="@+id/include2">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/monday"
                  android:background="@color/lightGreen" android:padding="@dimen/nav_header_vertical_spacing"
                  android:visibility="visible">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/monDAY"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/monSubject"
                    android:padding="@dimen/nav_header_vertical_spacing"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/monSched"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/monTeacher"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="80dp" android:id="@+id/tuesday"
                  android:padding="@dimen/nav_header_vertical_spacing">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tueDAY"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tueSubject"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tueSched"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tueTeacher"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="81dp" android:id="@+id/wednesday"
                  android:padding="@dimen/nav_header_vertical_spacing">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/wedDAY"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/wedSubject"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/wedSched"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/wedTeacher"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/thursday"
                android:padding="@dimen/nav_header_vertical_spacing">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/thuDAY"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/thuSubject"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/thuSched"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/thuTeacher"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/friday"
                  android:padding="@dimen/nav_header_vertical_spacing">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/friDAY"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/friSubject"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/friSched"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/friTeacher"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/saturday"
                  android:padding="@dimen/nav_header_vertical_spacing">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/saturDAY"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/satSubject"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/satSched"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/satTeacher"
                    android:padding="@dimen/nav_header_vertical_spacing"/>
        </TableRow>
    </TableLayout>

</android.support.design.widget.CoordinatorLayout>