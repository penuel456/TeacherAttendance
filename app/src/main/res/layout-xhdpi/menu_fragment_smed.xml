<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/background_light"
                                             android:id="@+id/relativeLayout">

    <ScrollView
            android:layout_width="339dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.6"
            android:id="@+id/smedScrollView" android:scrollbarStyle="outsideInset" android:visibility="gone"
            android:background="@android:color/background_light" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/smed_floors"
            android:fillViewport="false" android:layout_height="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="vertical" android:layout_marginBottom="20dp" android:visibility="visible"
                      android:layout_marginTop="300dp" android:gravity="center">
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="304dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/smedRoomOne"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="391dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/smedRoomTwo"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="439dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/smedRoomThree"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" tools:layout_editor_absoluteY="509dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/smedRoomFour"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" android:id="@+id/smedRoomFive"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" android:id="@+id/smedRoomSix"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" android:id="@+id/smedRoomSeven"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" android:id="@+id/smedRoomEight"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Button"
                    android:layout_width="165dp"
                    android:layout_height="59dp" android:id="@+id/smedRoomNine"
                    android:background="@drawable/rounded_green_btn" android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>
    </ScrollView>
    <RadioGroup
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/smed_wings"
            app:layout_constraintHorizontal_bias="0.716" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/safad_floors"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:visibility="gone"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/chooseWing_2"
            android:gravity="top">
        <RadioButton
                android:text="Mathematics Department"
                android:layout_height="40dp" tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="174dp" android:id="@+id/smed_wing1" android:buttonTint="#0ba156"
                android:layout_width="150dp" android:visibility="visible"/>
        <RadioButton
                android:text="Biology Department"
                android:layout_width="150dp"
                android:layout_height="40dp" android:id="@+id/smed_wing2" android:layout_weight="1"
                android:buttonTint="#0ba156" android:visibility="visible"/>
        <RadioButton
                android:text="Chemistry Department"
                android:layout_width="150dp"
                android:layout_height="40dp" android:id="@+id/smed_wing3" android:layout_weight="1"
                android:buttonTint="#0ba156" android:visibility="visible"/>
        <RadioButton
                android:text="Physics Department"
                android:layout_width="150dp"
                android:layout_height="40dp" android:id="@+id/smed_wing4" android:layout_weight="1"
                android:visibility="visible" android:buttonTint="#0ba156"/>
    </RadioGroup>
    <RadioGroup
            android:layout_width="113dp"
            android:layout_height="163dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="12dp" app:layout_constraintHorizontal_bias="0.0" android:id="@+id/smed_floors"
            app:layout_constraintTop_toBottomOf="@+id/textView2">
        <RadioButton
                android:text="Basement"
                android:layout_width="wrap_content"
                android:layout_height="45dp" android:id="@+id/BasementBtn" android:layout_weight="1"
                android:buttonTint="#0ba156"
        />
        <RadioButton
                android:text="1st Floor"
                android:layout_width="wrap_content"
                android:layout_height="45dp" android:id="@+id/firstFloorBtn" android:layout_weight="1"
                android:buttonTint="#0ba156"
                tools:text="1st Floor"/>
        <RadioButton
                android:text="2nd Floor"
                android:layout_width="wrap_content"
                android:layout_height="43dp" android:id="@+id/secondFloorBtn" android:layout_weight="1"
                android:buttonTint="#0ba156"
                tools:text="2nd Floor"/>
        <RadioButton
                android:text="3rd Floor"
                android:layout_width="wrap_content"
                android:layout_height="46dp" android:id="@+id/thirdFloorBtn" android:layout_weight="1"
                android:buttonTint="#0ba156"
                tools:text="3rd Floor"/>
    </RadioGroup>
    <TextView
            android:text="Choose a Floor"
            android:layout_width="165dp"
            android:layout_height="27dp" android:id="@+id/textView2"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            tools:textSize="18sp"
            android:textColor="@android:color/background_dark" tools:text="Choose a Floor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="24sp" android:textStyle="bold"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView8"
    />
    <TextView
            android:text="Choose a Wing"
            android:layout_width="172dp"
            android:layout_height="30dp" android:id="@+id/chooseWing_2"
            tools:textSize="18sp"
            android:textColor="@android:color/background_dark" tools:text="Choose a Wing"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textSize="24sp" android:textStyle="bold"
            android:visibility="invisible" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/imageView8"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="362dp"
            android:layout_height="181dp" app:srcCompat="@drawable/smednew"
            android:id="@+id/imageView8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>
